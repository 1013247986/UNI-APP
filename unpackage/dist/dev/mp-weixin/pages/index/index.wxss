
.content {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
}
.title {
		font-size: 36rpx;
		color: #8f8f94;
}
.view-box {
		font-family: "Scour";
		font-weight: 100;
		font-size: 80rpx;
		width: 200rpx;
		height: 200rpx;
		background: #007aff;
		color: #ffffff;
		margin: 100rpx;
}
.view-box-hover {
		border: 1px solid;
		background: red;
}
#view2 {
		background: yellow;
}
.box {
		height: 500rpx;
		width: 100%;
		border: 1rpx solid #ccc;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		/* justify-content: center;
	align-items: center;
	flex-direction: column; */
}
.box-item {
		font-size: 30rpx;
		height: 200rpx;
		/* width: 200upx; */
		background: #007aff;
		color: #fff;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.box-item:nth-of-type(odd) {
		background: #007aff;
}
.box-item:nth-of-type(even) {
		background: #09bb07;
}

	/* .box-item:first-of-type{
	flex-shrink: 0;
} */
.box-item:nth-of-type(1) {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
}
.box-item:nth-of-type(2) {
		-webkit-box-flex: 3;
		-webkit-flex: 3;
		        flex: 3;
		-webkit-align-self: flex-end;
		        align-self: flex-end;
}
.box-item:nth-of-type(3) {
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
}
.box2 {
		border: 1rpx solid #333333;
		height: 500rpx;
		width: 100%;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
}
.box2>view {
		font-size: 40rpx;
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		font-weight: bold;
		background: #007AFF;
		color: #fff;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		height: 500rpx;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		border: 1rpx solid #fff;
}

